{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"allowJs": true,
		"paths": {
			"#utils/*": ["lib/util/*"],
			"#lib/*": ["lib/*"],
			"#constants": ["lib/util/constants.ts"],
			"#config": ["config.ts"],
			"#root/*": ["*"]
		},
		"skipLibCheck": true,
		"composite": true
	},
	"include": [".", "./**/*.json"],
	"exclude": ["./tsconfig.json"]
}
